@page
@model RaymiMusic.MVC.Pages.ClienteVistas.BibliotecaVistasModel

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>RaymiMusic - Tu Biblioteca</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white">

    <div class="d-flex">
        <!-- Sidebar -->
        <div class="bg-dark text-white p-3 min-vh-100 shadow-lg" style="width: 240px;">
            <h4 class="mb-4">🎵 RaymiMusic</h4>
            <ul class="nav flex-column gap-2">
                <li class="nav-item">
                    <a class="nav-link text-white hover:bg-gray-700 rounded px-2 py-1" href="/ClienteVistas/InicioVista">Inicio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white hover:bg-gray-700 rounded px-2 py-1" href="/ClienteVistas/BuscarVista">Buscar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active bg-gray-700 rounded px-2 py-1" href="#">Tu Biblioteca</a>
                </li>
                <li class="nav-item mt-4">
                    <a class="nav-link text-white hover:bg-gray-700 rounded px-2 py-1" href="#">Playlists</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white hover:bg-gray-700 rounded px-2 py-1" href="#">Álbumes</a>
                </li>
            </ul>
        </div>

        <!-- Contenido principal -->
        <div class="flex-grow-1">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center px-4 py-3 border-bottom border-secondary bg-black bg-opacity-75 sticky-top">
                <div class="w-50">
                    <input type="text" placeholder="Filtrar tu biblioteca..." class="form-control bg-gray-800 border-0 text-white placeholder-gray-400">
                </div>
                <div class="d-flex align-items-center gap-3">
                    <img src="/img/usuario.png" alt="Perfil" class="rounded-full w-10 h-10 border border-gray-400">
                    <span class="text-white fw-bold">Hola -Nombre Usuario-</span>
                </div>
            </div>

            <!-- Sección de biblioteca -->
            <div class="p-4">
                <h2 class="text-xl fw-bold mb-3">Tu Biblioteca</h2>
                <p class="text-gray-400">Aquí puedes ver tus canciones favoritas, álbumes guardados y más.</p>

                <div class="row g-4 mt-3">
                    <div class="col-6 col-md-4 col-lg-3">
                        <div class="bg-gray-800 rounded-xl p-3 hover:bg-gray-700 transition">
                            <img src="/img/album1.jpg" class="w-100 rounded mb-2" alt="Mi álbum">
                            <h5 class="fw-bold mb-1">Mi Álbum Guardado</h5>
                            <p class="text-sm text-gray-400 mb-0">Álbum favorito</p>
                        </div>
                    </div>
                    <!-- Puedes duplicar más tarjetas aquí -->
                </div>
            </div>
        </div>
    </div>

</body>
</html>
